<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_marginLeft="5dip"
        android:id="@+id/iv_item_appmanage_icon"
        android:layout_width="55dip"
        android:layout_height="55dip" />

    <TextView
        android:layout_marginTop="4dip"
        android:layout_marginLeft="8dip"
        android:id="@+id/tv_item_appmanage_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_appmanage_icon"
        android:text="软件名"
        android:textSize="16sp" />

    <TextView
        android:gravity="center"
        android:layout_alignBottom="@id/iv_item_appmanage_icon"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="2dip"
        android:id="@+id/tv_item_appmanage_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_appmanage_appName"
        android:layout_toRightOf="@id/iv_item_appmanage_icon"
        android:text="手机内存"
        android:textSize="14sp" />

    <TextView
        android:layout_marginRight="8dip"
        android:id="@+id/tv_item_appmanage_appSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="5.5M"
        android:textSize="18sp" />

</RelativeLayout>