<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:clickable="true"
   	android:background="@drawable/color_selector">

    <TextView
        android:id="@+id/tv_item_smstel_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="8dip"
        android:text="电话号码"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_item_smstel_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_smstel_number"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:text="拦截状态"
        android:textColor="#99000000"
        android:textSize="16sp" />

    <ImageView
        android:layout_marginRight="5dip"
        android:background="@drawable/icondelete_selection"
        android:id="@+id/iv_item_smstel_deleteicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@id/tv_item_smstel_mode"
        android:layout_marginTop="8dip"
        android:background="@drawable/list_devider" />

</RelativeLayout>