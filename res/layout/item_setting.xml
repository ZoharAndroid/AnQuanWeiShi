<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:clickable="true"
   	android:background="@drawable/color_selector">

    <TextView
        android:id="@+id/tv_item_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="8dip"
        android:text="版本升级"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_item_setting_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_setting_title"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:text="升级软件版本"
        android:textColor="#99000000"
        android:textSize="16sp" />

    <CheckBox
        android:clickable="false"
        android:id="@+id/cb_item_setteing_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@id/tv_item_setting_desc"
        android:layout_marginTop="8dip"
        android:background="@drawable/list_devider" />

</RelativeLayout>