<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_item_transfic_icon"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_marginLeft="5dip" />

    <TextView
        android:id="@+id/tv_item_transfic_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_item_transfic_icon"
        android:text="软件名"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_item_transfic_lockicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dip"
        android:clickable="true"
        android:src="@drawable/tranfic_button_selection" />

</RelativeLayout>