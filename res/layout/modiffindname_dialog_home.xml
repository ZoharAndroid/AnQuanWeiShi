<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="300dip"
    android:orientation="vertical" >

    <TextView
        android:layout_width="300dip"
        android:layout_height="45dip"
        android:background="#5500ffdd"
        android:gravity="center"
        android:text="修改手机防盗名"
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_dialog_home_modifname"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:hint="请输入修改名"
        />

  

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:onClick="sureModif"
            android:background="@drawable/button_selection"
            android:text="确认修改"
            android:id="@+id/bt_dialog_home_suremodif"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        
        <Button
            android:onClick="cancelModif"
            android:background="@drawable/button_selection"
            android:text="取消修改"
            android:id="@+id/bt_dialog_home_cancelmodif"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>