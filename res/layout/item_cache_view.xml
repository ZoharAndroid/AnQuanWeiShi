<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/iv_item_cache_icon"
        android:layout_width="55dip"
        android:layout_height="55dip"/>
    
    <TextView
        android:layout_marginTop="4dip"
        android:layout_marginLeft="8dip"
        android:id="@+id/tv_item_cache_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_cache_icon"
        android:text="软件名"
        android:textSize="16sp" />

    <TextView
        android:gravity="center"
        android:layout_alignBottom="@id/iv_item_cache_icon"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="2dip"
        android:id="@+id/tv_item_cache_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_cache_appName"
        android:layout_toRightOf="@id/iv_item_cache_icon"
        android:text="缓存:"
        android:textSize="14sp" />
    

</RelativeLayout>
